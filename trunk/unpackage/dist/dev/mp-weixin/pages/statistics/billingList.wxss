.amount{
    width: calc(50% - 15rpx);
    height: 186rpx;
    background:-webkit-linear-gradient(135deg,rgba(136,226,150,1) 0%,rgba(3,190,144,1) 100%);
    background:linear-gradient(315deg,rgba(136,226,150,1) 0%,rgba(3,190,144,1) 100%);
    border-radius:30rpx;
