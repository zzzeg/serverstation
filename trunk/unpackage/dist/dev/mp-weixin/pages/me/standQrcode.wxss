
page{
    background: #F7F7F8;
}
.box{
    margin: 30rpx 40rpx;
    width: calc(100% - 60rpx);
    background: #FFFFFF;
    border-radius:30rpx;
}
.topBox{
    padding-left: 40rpx;
    padding-top: 40rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -webkit-flex-direction: row;
            flex-direction: row;
}
.topBox image{
    width: 112rpx;
    height: 112rpx;
    background: #F8F8F8;
    border-radius: 10rpx;
}
.titleBox {
    margin-left: 20rpx;
    font-size:28rpx;
    font-family:NotoSansCJKsc-Regular,NotoSansCJKsc;
    font-weight:400;
    color:rgba(162,169,186,1);
    line-height:40rpx;
}
.titleBox .title{
    font-size:40rpx;
    font-family:NotoSansCJKsc-Medium,NotoSansCJKsc;
    font-weight:500;
    color:rgba(22,32,46,1);
    line-height:76rpx;
}
.qrcore{
    margin-top: 100rpx;
    margin-bottom: 60rpx;
    width: 490rpx;
    height: 400rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    
    width: 100%;
}
.codeText{
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    font-size:14px;
    font-family:NotoSansCJKsc-Regular,NotoSansCJKsc;
    font-weight:400;
    color:rgba(162,169,186,1);
}

